<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Video Game Names</title>

  <!--BROWSER ICON-->
  <link rel="shortcut icon" href="browserIcon.png">

  <!--FONTS-->
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Chewy&display=swap" rel="stylesheet">

  <!--STYLESHEETS-->
  <link rel="stylesheet" href="reset.css">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <header>
    <h1>Video Games</h1>
  </header>

  <section>
    <h2>Submit a Game</h2>
    <form action="/videoGames" method="POST">
      <input type="text" placeholder="Video Game Name" name="videoGameName">
      <input type="text" placeholder="Game System" name="gameSystem">
      <button type="submit">Submit</button>
    </form>
  </section>

  <main>
    <div>
      <h3>Games to Play</h3>
      <ul>
      <% for(var i=0; i<submittedGames.length; i++) {%>
        <% if (!submittedGames[i].completed) { %>
          <li>
            <span><%= submittedGames[i].videoGameName %></span>
            <span><%= submittedGames[i].gameSystem %></span>
            <span><i class="fa fa-star-o" aria-hidden="true"></i></span>
            <span><i class="fa fa-trash" aria-hidden="true"></i></span>
          </li>
        <% } %>
      <% } %>
      </ul>
    </div>
    <div>
      <h3>Completed Games</h3>
      <ul>
        <% for(var i=0; i<submittedGames.length; i++) {%>
          <% if (submittedGames[i].completed) { %>
            <li>
              <span><%= submittedGames[i].videoGameName %></span>
              <span><%= submittedGames[i].gameSystem %></span>
              <span><i class="fa fa-star" aria-hidden="true"></i></span>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
          <% } %>
        <% } %>
      </ul>
    </div>
  </main>
  

  <script src="main.js"></script>

</body>
</html>
